	<!-- AP相关信息 -->
	<package name="ap" extends="json-default" namespace="/">
		<action name="ap_*" class="apAction" method="{1}">
			<result name="search" type="json">
				<param name="root">oneAP</param>
			</result>
			<result name="searchAll" type="json">
				<param name="root">allAP</param>
			</result>
		</action>
	</package>
</struts>